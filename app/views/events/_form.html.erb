<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <% if current_user.has_role? :admin%>
    	<%= f.input :user_id %>
	<%else%>
		<%= f.hidden_field :user_id, value: current_user.id %>
    <% end %>
    <%= f.association :bands %>
    <%= f.input :date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
