<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <% if current_user.has_role? :admin%>
    	<%= f.input :venue_id %>
	<%else%>
		<%= f.hidden_field :venue_id, value: Venue.where(user_id: current_user.id).first.id %>
    <% end %>
    <%= f.association :bands %>
    
    <%= f.input :start%>
    
    <%= f.input :end%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-success" %>
  
<% end %>
