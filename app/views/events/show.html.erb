
<div class="jumbotron">
	<h1>
	  	<%= @event.name %>
	</h1>
	
	<p>
	  	<%= @event.description %>
	</p>
	
	<p>
		<b>@ </b>
	  	<%= @event.venue.name %>
	</p>
	
	<p>
	  	<b>Start:</b>
	  	<%= @event.start %>
	</p>
	
	<p>
	  	<b>End:</b>
	  	<%= @event.end %>
	</p>
	
	<p>
	  	<b>Bands:</b>
	  	<% @event.bands.each do |b| %>
	  		<%= link_to b.name, b %>
		<%end%>
	</p>
</div>

<div class="well">
	<% if can? :update, @event%>
		<%= link_to 'Edit', edit_event_path(@event), :class => "btn btn-info" %>
	<%end%>
	
	<% if current_user.has_role? :admin%>
		<%= link_to 'Back', events_path, :class => "btn btn-danger" %>
	<%else%>
		<%= link_to 'Back', root_path, :class => "btn btn-danger" %>
	<%end%>
</div>

<%= render "layouts/footer"%>
