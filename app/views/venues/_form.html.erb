<%= simple_form_for(@venue) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address_1 %>
    <%= f.input :address_2 %>
    <%= f.input :post_code %>
    <%= f.input :description %>
    <% if current_user.has_role? :admin%>
    	<%= f.input :user_id %>
	<%else%>
		<%= f.hidden_field :user_id, value: User.where(user_id: current_user.id).first.id %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
